@{
    ViewData["Title"] = "Enter Quote";
}

@model FinalTest413.Models.Quote

<div class="card border-light mb-4">

    <div class="row m-1 p-1 justify-content-between align-items-center">
        <h1 class="row mt-3 ml-4">Enter Quote Information</h1>
    </div>

    <div class="form-group mx-5">
        <form method="post">
            <div asp-validation-summary="All"></div>

            <div class="form-group">
                <label asp-for="QuoteText">Quote:</label>
                <input class="form-control" asp-for="QuoteText" /><br />
            </div>

            <div class="form-group">
                <label asp-for="Author">Author:</label>
                <input class="form-control" asp-for="Author" /><br />
            </div>

            <div class="form-group">
                <label asp-for="Date">Date:</label>
                <input class="form-control" asp-for="Date" /><br />
            </div>

            <div class="form-group">
                <label asp-for="Subject">Subject:</label>
                <input class="form-control" asp-for="Subject" /><br />
            </div>

            <div class="form-group">
                <label asp-for="Citation">Citation:</label>
                <input class="form-control" asp-for="Citation" /><br />
            </div>

            <button class="btn btn-outline-primary mb-3" type="submit">Submit</button>

        </form>
    </div>
</div>

<a class="btn btn-dark" role="button" asp-action="Index">Back</a>

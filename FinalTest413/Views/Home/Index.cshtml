@{
    ViewData["Title"] = "Quote Dictionary";
}

@model List<Quote>


<div class="card border-light mb-4">
    <div class="row m-1 p-1 justify-content-between align-items-center">
        <h1 class="row mt-3 ml-4">Famous Quotes</h1>
    </div>

    <div class="card-group col-9">
        @foreach (var quote in Model)
        {
            <div class="col-xl-6 col-md-12 mb-4">
                <div class="card card-stats mb-4 mb-xl-0">
                    <div class="card-body card-info">
                        <div class="row">
                            <div class="col">
                                <span class="h3 font-weight-bold mb-0">@quote.QuoteText</span>
                            </div>
                            <div class="col-auto">
                                <a class="btn btn-outline-info btn-sm" asp-controller="Home" asp-action="QuoteDetails" asp-route-quoteid="@quote.QuoteID">Details</a>
                            </div>
                        </div>
                        <p class="mt-0 mb-0 text-muted text-sm">
                            <span class="text-nowrap">@quote.Author</span>
                        </p>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
